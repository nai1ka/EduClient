<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "mainParentThemeDark" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <item name ="cardBackgroundColor">@color/darkThemeSurfaceColor</item>
        <item name="dialogTheme">@style/Theme.MaterialComponents.DayNight.Dialog</item>
        <item name ="android:textColor">@color/textColorNight</item>
        <item name="tabBackground">@color/darkThemeSurfaceColor</item>
        <item name="tabTextColor">#ececec</item>
    </style>
    <style name="AvocadoTheme" parent="mainParentThemeDark">
        <item name="colorPrimary">#68B2A0</item>
        <item name="colorPrimaryDark">#2C6975</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="DefaultNoActionBar" parent="mainParentThemeDark">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SplashTheme" parent="mainParentThemeDark">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#028174</item>
    </style>

    <style name="PurpleTheme" parent="mainParentThemeDark">
